{
  "name": "yajalon-app",
  "private": true,
  "version": "1.3.2",
  "description": "Sistema de Transporte Los Yajalones",
  "author": "Wolfpack Software",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron": "electron .",
    "build:react": "vite build",
    "build:electron": "electron-builder",
    "build": "vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "axios": "^1.10.0",
    "electron-log": "^4.4.8",
    "electron-pos-printer": "^1.3.8",
    "electron-updater": "^6.6.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "node-thermal-printer": "^4.5.0",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "sweetalert2": "^11.22.5",
    "tailwindcss": "^4.1.11",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "vite": "^7.0.0",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.yajalon.transporte",
    "productName": "Sistema de Transporte",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/assets/",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icono.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "RaulexG",
        "repo": "App_Yajalones"
      }
    ]
  }
}
